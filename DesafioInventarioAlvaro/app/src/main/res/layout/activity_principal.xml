<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Theme.DesafioInventarioAlvaro.Fondo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PrincipalActivity">

    <LinearLayout
        android:layout_width="425dp"
        android:layout_height="148dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="113dp"
            android:layout_height="148dp"
            android:orientation="horizontal">

        </LinearLayout>

        <TextView
            android:id="@+id/txtRol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <LinearLayout
            android:layout_width="122dp"
            android:layout_height="148dp"
            android:orientation="horizontal">

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="425dp"
        android:layout_height="148dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="113dp"
            android:layout_height="148dp"
            android:orientation="horizontal">

        </LinearLayout>

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragmentProfesor"
            android:name="com.example.desafioinventarioalvaro.ProfesorFragment"
            android:layout_width="match_parent"
            android:layout_height="62dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="425dp"
        android:layout_height="148dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="113dp"
            android:layout_height="148dp"
            android:orientation="horizontal">
        </LinearLayout>

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragmentJefe"
            android:name="com.example.desafioinventarioalvaro.JefeFragment"
            android:layout_width="match_parent"
            android:layout_height="398dp"
            android:visibility="visible" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/button"
            style="@style/Theme.DesafioInventarioAlvaro.Boton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="cerrarSesion"
            android:text="@string/cerrarSesion"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>